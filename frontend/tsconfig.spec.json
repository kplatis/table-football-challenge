{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "esModuleInterop": true,
      "types": ["jest", "node"],
      "allowJs": true,
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "jsx": "react-jsx",
    },
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      ".next/types/**/*.ts",
      "tsconfig.spec.json",
      "src/**/*",
      "./**/*",
      "globals.d.ts",
      "**/.next/types/**/*.ts",
      "**/.next/types/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/.next/types/**/*.ts",
      "**/.next/types/**/*.ts",
      "build", 
      "dist"
    ]
  }
  