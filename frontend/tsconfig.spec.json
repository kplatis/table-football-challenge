{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "esModuleInterop": true,
      "types": ["jest", "node"],
      "allowJs": true,
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node"
    },
    "include": ["src/**/*.spec.ts", "src/**/*.spec.tsx", "src/**/*.test.ts", "src/**/*.test.tsx"],
    "exclude": ["node_modules", "build", "dist"]
  }
  