{
  "compilerOptions": {
    "types": [
      "@testing-library/jest-dom",
      "jest"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tsconfig.spec.json",
    "src/**/*",
    "./**/*",
    "globals.d.ts",
    "**/.next/types/**/*.ts",
    "**/.next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/.next/types/**/*.ts",
    "**/.next/types/**/*.ts"
  ]
}
